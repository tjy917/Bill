page{
  font-family: "Microsoft YaHei";
  background-color: white;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.page-body{
  display: flex;
  flex-direction:column;
  flex: 1;
}

.items{
  display: flex;
  padding: 10rpx;
  border-bottom: 20rpx solid #eee;
  /*width:100%;*/
  height: 250rpx;
}

.items .poster{
  width: 200rpx;
  height: 100%;
  margin-right: 20rpx;
  border-radius:10rpx;
}

.items  .meta{
  flex: 1;
}

.items  .title{
  font-size: 60rpx;
}

.items  .title ,.items  .subtitle {
  display: block;
  margin-bottom: 14rpx;
}
.members{
  font-size: 30rpx
}

.member-icon{
  margin-top: 20rpx;
  display: inline-flex;
  border-radius:10rpx;
  margin-right: 10rpx
}
.rating{
  display: flex;
  flex-direction: column;
  font-size: 40rpx
}
.items .C_time{
  display: block;
  font-size: 30rpx
}
.income{
  color: green;
  font-weight: bold;
}
.outcome{
  color: red;
  font-weight: bold;
}