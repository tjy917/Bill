page{
  font-family: "Microsoft YaHei";
  background-color: white;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.page-body{
  display: flex;
  flex-direction:column;
  flex: 1;
}

.items{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 30rpx solid #eee;
  /*width:100%;*/
  height: 250rpx;

}

.items .poster{
  width: 200rpx;
  height: 250rpx;
  margin-right: 20rpx;
}

.items  .meta{
  flex: 1;
}

.items  .title{
  font-size: 60rpx;
}

.items  .title ,.items  .subtitle {
  display: block;
  margin-bottom: 14rpx;
}

.member-class{
  margin-top: 20rpx;
  display: inline-flex;
  flex-direction: row;
}
.rating{
  font-size: 28rpx
}